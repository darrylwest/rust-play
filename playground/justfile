
alias b := build
alias t := test
alias ta := test-all

# run the standard tests
test:
    clear
    cargo test

# run the standard tests + clippy and fmt
test-all:
    clear
    cargo test && cargo fmt && cargo clippy

# build the debug target
build:
    clear
    cargo build

async-process:
    cargo run --bin async-process

fastrand:
    cargo run --bin fastrand-test

